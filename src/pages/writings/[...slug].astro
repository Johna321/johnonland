---
import { getCollection } from 'astro:content';
import ArticleLayout from '../../layouts/ArticleLayout.astro';
import Backlinks from '../../components/Backlinks.astro';
import { getBacklinksFor } from '../../lib/backlinks';

export async function getStaticPaths() {
  // Build ALL writings (including drafts) - drafts are unlisted but accessible by URL
  const writings = await getCollection('writings');
  return writings
    .filter((entry) => entry.slug !== 'index')
    .map((entry) => ({
      params: { slug: entry.slug },
      props: { entry },
    }));
}

const { entry } = Astro.props;
const { Content, headings } = await entry.render();
const backlinks = await getBacklinksFor('writings', entry.slug);

const title = entry.data.title || entry.slug.split('/').pop()?.replace(/-/g, ' ') || 'Untitled';
---

<ArticleLayout
  title={title}
  date={entry.data.date}
  tags={entry.data.tags}
  hideTitle={entry.data.hide_title}
  hideMetadata={entry.data.hide_metadata}
  collection="writings"
  slug={entry.slug}
  headings={headings}
  content={entry.body}
>
  <Content />
  <Backlinks slot="backlinks" backlinks={backlinks} />
</ArticleLayout>
